package com.tech.problemStatements;

import java.util.Scanner;

public class RigthAngleTriangle {

	public static void main(String[] args) {
		//variables here
		
		int a,b,c;
		
		//scannig input for 3 sides
		
		Scanner scan=new Scanner(System.in);
		System.out.println(" Enter the values for making tringle");
		
		//for first
		System.out.print(" Value of fisrt side");
		a=scan.nextInt();
		
		//for second
		System.out.print(" Value of second side");
		b=scan.nextInt();
		
		//for third
		System.out.print(" Value of third side");
		c=scan.nextInt();
		
		//now logic for checking right angle triangle or not
		if(a<=0 || b<=0 || c<=0) {
			
			System.out.println("enter the correct values ");
			
		}
		else {
			if(a>b && a>c) {
				
				if((a*a)==(b*b)+(c*c)) {
					System.out.println("Right angle triangle");
				}
				else {
					System.out.println("Not right angle triangle ");
				}
			}
			if(b> a&& b>c) {
				if((b*b)==(a*a)+(c*c)) {
					System.out.println("Right angle triangle");
				}
				else {
					System.out.println("Not right angle triangle ");
				}		
					
			}
			if(c>a && c>b) {
				if((c*c)==(b*b)+(a*a)) {
					System.out.println("Right angle triangle");
				}
				else {
					System.out.println("Not right angle triangle ");
				}		
					
			}
			
		}
		

	}

}
