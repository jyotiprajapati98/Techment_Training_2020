package com.tech.problemStatements;

import java.util.*;

public class Pattern_Ex_35 {

	public static void main(String[] args) {
		int rows;
		
		System.out.println(" enter number of rows you want --");
		Scanner scan=new Scanner(System.in);
		rows=scan.nextInt();
		
		for(int i=0;i<rows-1;i++) {
			
			for(int j=0;j<=i;j++) {
				System.out.print("*"+" ");
			}
			System.out.println("");
		}
		
		
	}

}
